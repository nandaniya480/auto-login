{
    "manifest_version": 3,
    "name": "Auto Login and Token API Caller",
    "version": "1.0",
    "permissions": [
        "cookies",
        "storage",
        "scripting",
        "activeTab",
        "clipboardWrite",
        "tabs"
    ],
    "host_permissions": [
        "http://192.168.1.200:88/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://192.168.1.200:88/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "Auto Login Extension",
        "default_popup": "popup.html"
    }
}